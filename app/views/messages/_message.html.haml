.chat-main-message-box{data: {message: {id: message.id}}}
  .chat-main-message-box-info
    .chat-main-message-box-info-talker
      = message.user.name
    .chat-main-message-box-info-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main-message-box-text
    - if message.content.present?
      %p.chat-main-message-list-box__content
        = message.content
    = image_tag message.image.url, class: 'chat-main-message-list-text__image' if message.image.present?